{
  "compilerOptions": {
    "lib": [
      "es2022",
      "dom"
    ],
    "outDir": "./dist/client",
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es2022",
    "allowJs": true,
    "moduleResolution": "Node",
    "sourceMap": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@/*": ["./src/*"]
    },

    "typeRoots": [
      "./node_modules/@webgpu/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/conduct-core-client/**/*.ts"
  ],
  "exclude": ["./node_modules"]
}
