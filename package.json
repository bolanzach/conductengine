{
  "name": "conductengine",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "dev": "node_modules/nodemon/bin/nodemon.js --watch src --ext ts,wgsl --ignore **/*systemDefinitions.ts --exec 'yarn clean && yarn cli:run && yarn server:compile & yarn client:compile && yarn server:start'",
    "server:compile": "node_modules/@swc/cli/bin/swc.js src/conduct-core src/server src/conduct-ecs src/game -d dist --config-file .swcrc",
    "server:start": "node --enable-source-maps dist/src/server",
    "client:compile": "node_modules/webpack/bin/webpack.js --mode development && cp src/client/main.html dist/src/server/static/main.html",
    "cli:compile": "node_modules/typescript/bin/tsc cli/main.ts",
    "cli:run": "node cli/main.js"
  },
  "dependencies": {
    "@webgpu/types": "^0.1.48",
    "express": "^4.21.0",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.7",
    "raf": "^3.4.1",
    "reflect-metadata": "^0.2.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@swc/cli": "^0.4.1-nightly.20240914",
    "@swc/core": "^1.7.26",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.10",
    "@types/raf": "^3.4.3",
    "@types/ws": "^8.5.12",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.10.0",
    "prettier": "3.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.8.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
