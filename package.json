{
  "name": "conductengine",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "node_modules/nodemon/bin/nodemon.js --watch src --ext ts --exec 'yarn clean && yarn server:compile && yarn client:compile && yarn server:start'",
    "server:compile": "node_modules/@swc/cli/bin/swc.js src/server src/conduct-ecs -d dist --config-file .swcrc",
    "server:start": "node dist/src/server",
    "client:compile": "node_modules/webpack/bin/webpack.js --mode development && cp src/client/main.html dist/src/server/static/main.html"
  },
  "dependencies": {
    "@webgpu/types": "^0.1.48",
    "express": "^4.21.0",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.7",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.4.1-nightly.20240914",
    "@swc/core": "^1.7.26",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.10",
    "prettier": "3.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
