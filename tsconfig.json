{
  "compilerOptions": {
    "lib": [
      "esNext",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2022",

    "rootDir": ".",
    "noEmit": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",

    "types": ["@webgpu/types"],

    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "allowJs": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false
  },
  "include": ["src/**"],
  "exclude": ["node_modules"]
}
